- content_tag_for(:tr, <%= singular_name -%>, :class => cycle(:odd, :even)) do
<% attributes.each do |attribute| -%>
  %td.<%= attribute.name %>= h <%= singular_name %>.try(:<%= attribute.name %>)
<% end -%>
  %td.actions
    = link_to t(:show), <%= singular_name %>_path(<%= singular_name %>)
    |
    = link_to t(:edit), edit_admin_<%= singular_name %>_path(<%= singular_name %>)
    |
    = link_to 'Destroy', confirm_destruction_admin_<%= singular_name %>_path(<%= singular_name %>)