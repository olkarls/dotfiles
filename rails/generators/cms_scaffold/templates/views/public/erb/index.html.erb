<h1><%%= t(:<%= plural_name %>).capitalize %></h1>
<table>
  <thead>
    <tr>
<%- attributes.each do |attribute| -%>
      <th class="<%= attribute.name %>">
        <%%= t(:<%= attribute.name %>).capitalize %>
      </th>
<%- end -%>
    </tr>
  <tbody class="items <%= plural_name %>">
    <%%- @<%= plural_name %>.each do |<%= singular_name %>| -%>
      <%%= render 'item', :<%= singular_name %> => <%= singular_name %> %>
    <%%- end -%>
  </tbody>
</table>
<%%= will_paginate(@<%= plural_name %>) %>