# Generic
function take {
	mkdir $1
	cd $1
}

function c {
	cd ~/code/$1
}

alias ..='cd ..'

function m {
	cd ~/code/$1
	mate .
}

# Rails
function railsapp {
	template=$1
	appname=$2
	shift 2
	rails $appname -m http://github.com/olkarls/rails-templates/raw/master/$template.rb -d mysql $@	
}

function railsapp_db {
	template=$1
	appname=$2
	shift 2
	rails $appname -m http://github.com/olkarls/rails-templates/raw/master/$template.rb $@	
}

alias sc='./script/console'
alias sg='./script/generate'
alias sp='./script/plugin'
alias ss='./script/server'
alias ssd='./script/server --debugger'
alias rmig='rake db:migrate'

alias rc='rails console'
alias rg='rails generate'
alias rp='rails plugin'
alias rs='rails server'
alias bi='bundle install'
alias rsd='rails server --debugger'