alias reload="source ~/.bashrc"

function take {
  mkdir $1
  cd $1
}

function c {
  cd ~/code/$1
}

function m {
  cd ~/code/$1
  mate .
}

function h {
  cd ~/$1
}

function cd() { builtin cd "$@" && ls -lhG; }

alias ..='cd ..'

alias tu='top -o cpu'   # cpu
alias tm='top -o vsize' #memory

function pless {
  pygmentize $1 | less -r
}